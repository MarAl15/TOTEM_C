{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "shell",
		"label": "C/C++: g++ build all files in src",
		"command": "g++",
		"args": [
		  "-fdiagnostics-color=always",
		  "-g3",
		  "-Wall",
		  "${workspaceFolder}/*.cpp",
		  "${workspaceFolder}/src/*.cpp",
		  "${workspaceFolder}/src/*.h",
		  "-I/usr/include/eigen3/",  // Specify the correct Eigen include path
		  "-I/usr/include/",
		  "-I/usr/include/",
		  "-o",
		  "${workspaceFolder}/TOTEM",
		  "-lgmsh",
		  "-larmadillo",
		  "-llapack",
		  "-lopenblas"
		],
		"options": {
		  "cwd": "${workspaceFolder}"
		},
		"problemMatcher": [
		  "$gcc"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"detail": "compiler: g++"
	  }
	]
  }
  